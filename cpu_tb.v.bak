`include "cpu.v"

module cpu_tb();

reg clk, hlt, rst_n;

cpu DUT(
		.clk(clk),
		.hlt(hlt),
		.rst_n(rst_n)
		);
		
initial begin
	clk = 0;
	rst_n = 0;
	#5
	rst_n = 1;
	hlt = 0;
end

always begin
	#5 clk = ~clk;
end

endmodule
